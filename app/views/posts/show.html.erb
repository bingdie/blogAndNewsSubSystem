<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>
<% if @post.user.id == session[:user].id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', admin_url %>
<% else %>
    <%= link_to 'Back', "/other" %>
 <% end %>

